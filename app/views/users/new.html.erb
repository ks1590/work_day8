<h1>ユーザー新規登録</h1>

<%= form_with(model: @user, local:true) do |f| %>
  <% if @user.errors.any? %>
    <div>
      <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li>・<%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <br>
  <div>
    <%= f.label :アカウント名 %>
    <%= f.text_field :name %>
  </div>
  <div>
    <%= f.label :メールアドレス %>
    <%= f.email_field :email %>
  </div>
  <div>
    <%= f.label :パスワード %>
    <%= f.password_field :password %>
  </div>
  <div>
    <%= f.label :パスワード（確認用） %>
    <%= f.password_field :password_confirmation %>
  </div>
  <div>
    <%= f.submit "新規登録" %>    
  </div>
<% end %>