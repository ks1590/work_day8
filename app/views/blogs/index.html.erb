<p id="notice"><%= notice %></p>
<%= link_to 'New Blog', new_blog_path, class: "btn btn-info", style: "color:#fff;" %>
<table class="table table-hover">
  <thead>
    <tr>
      <th>User Name</th>
      <th>Title</th>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @blogs.each do |blog| %>
      <tr>
        <td><%= blog.user.name %></td>
        <td><%= blog.title %></td>
        <td><%= blog.content %></td>
        <td><%= link_to 'Show', blog, class: "btn btn-info", style: "color:#fff;" %></td>
        <% if blog.user.id == current_user.id  %>
          <td><%= link_to 'Edit', edit_blog_path(blog), class: "btn btn-success", style: "color:#fff;" %></td>
          <td><%= link_to 'Destroy', blog, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger", style: "color:#fff;" %></td>
      </tr>
        <% end %>   
    <% end %>
  </tbody>
</table>
